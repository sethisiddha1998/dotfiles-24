source $HOME/dotfiles/mutt/mutt-gpg

# source 'gpg -dq $HOME/dotfiles/mutt/mutt-gmail.gpg |'
source 'gpg2 -dq $HOME/dotfiles/mutt/mutt-pawnmail.gpg |'

source $HOME/dotfiles/mutt/colors.muttrc

alternates "(sulami@peerwire\.org)|(sulamiification@gmail\.com)"

set realname        = "Robin Schroer"
set from            = sulami@peerwire.org
set use_from        = yes
set mail_check      = 30
set timeout         = 30
set ssl_force_tls   = yes
set ssl_starttls    = yes
set editor          = `echo \$EDITOR`
set send_charset    = "utf-8"
set sort            = threads
set sort_aux        = date-sent
set signature       = "$HOME/dotfiles/mutt/.signature"
set smtp_url        = smtp://sulami@peerwire.org:$my_pw_pawnmail@mail.pawnmail.com:587/

mailboxes $HOME/mail/Inbox $HOME/mail/feeds
set mbox_type       = Maildir
set folder          = $HOME/mail/Inbox
set spoolfile       = =/
set record          = =/../Sent
set postponed       = =/../Drafts
set header_cache    = /tmp/mutt-header-cache

# Hotkeys
bind editor <space> noop
bind index R group-reply
macro index,pager <f2> "<change-folder>$HOME/mail/Inbox<enter>"
macro index,pager <f3> "<change-folder>$HOME/mail/Archive<enter>"
macro index,pager <f4> "<change-folder>$HOME/mail/feeds<enter>"
macro index 'c' '<change-folder>?<change-dir><home>^K=<enter><enter><enter>'
macro index,pager D "<save-message>=/../Archive<enter><enter>" "Archive"

