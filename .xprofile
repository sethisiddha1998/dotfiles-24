#!/bin/sh

if [ -d /etc/X11/xinit/xinitrc.d ]; then
  for f in /etc/X11/xinit/xinitrc.d/*; do
    [ -x "$f" ] && . "$f"
  done
  unset f
fi

# pulseaudio --start &

xset m 0 0
xset +fp /usr/local/lib/X11/fonts/terminus
xrdb -merge $HOME/dotfiles/Xresources/base
xrdb -merge $HOME/dotfiles/Xresources/su256

# xset -dpms &
# xset s off &
# xset r rate 200 20 &

# razercfg -r 400 &

# skippy-xd --config ~/dotfiles/skippy-xd.rc --start-daemon &
xflux -l 51 -g 7 &
sxhkd -c ~/dotfiles/sxhkdrc &

# xsetroot -solid "#151a25"
# feh --bg-fill $HOME/bg.png &
# xsetroot -cursor_name left_ptr &

# compton -c -C -f -t-5 -l-5 -r8 -o.5 &

# conky -c $HOME/dotfiles/.conkyrc &

# This sets the resolution properly after slim mangled it.
# ~/dotfiles/scripts/swapdisplays.sh &

# if [[ -e ~/.fehbg ]]; then
#     sh ~/.fehbg
# fi

# Use the ThinkPad TrackPoint as mousewheel.
xinput set-prop "TPPS/2 IBM TrackPoint" "Evdev Wheel Emulation" 1
xinput set-prop "TPPS/2 IBM TrackPoint" "Evdev Wheel Emulation Button" 2
xinput set-prop "TPPS/2 IBM TrackPoint" "Evdev Wheel Emulation Timeout" 200

